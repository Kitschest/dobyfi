<div id="form">
<h1>Sign Up</h1>

<form action="/auth/signup" method="POST">
  <div class="col">
    <input type="text" class="form-control" placeholder="First name" aria-label="First name">

  <div class="col">
    <input type="text" class="form-control" placeholder="Last name" aria-label="Last name">

  <div class="col">
        <input type="text" class="form-control" placeholder="username" aria-label="username">

  <div class="col">
        <input type="text" class="form-control" placeholder="e-mail" aria-label="e-mail">

  <div class="col">
            <input type="number" class="form-control" placeholder="age" aria-label="age"required>

  <div class="col">
            <select id="sex" class="form-control" placeholder="sex" name="sex" required>
                <option value="male">Male</option>
                <option value="female">Female</option>
                <option value="other">Other</option>
                </select>

  <label for="accountType">Type of account:</label>
  <select id="accountType" name="accountType" required>
    <option value="parent">Parent Account</option>
    <option value="child">Child Account</option>
  </select>

  <label for="password">Password:</label>
  <input type="password" id="password" name="password" required>

  <input type="submit" value="Submit">
</form>

</div>
